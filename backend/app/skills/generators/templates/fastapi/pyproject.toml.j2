[project]
name = "{{ name }}"
version = "{{ version }}"
description = "{{ description }}"
{% if author %}authors = [{ name = "{{ author }}" }]{% endif %}
requires-python = ">=3.11"
dependencies = [
    "fastapi>=0.109.0",
    "uvicorn[standard]>=0.27.0",
    "pydantic>=2.5.0",
    "pydantic-settings>=2.1.0",
{% if has_database %}
{% if database == "sqlite" %}
    "aiosqlite>=0.19.0",
{% elif database == "postgres" %}
    "asyncpg>=0.29.0",
    "psycopg2-binary>=2.9.9",
{% elif database == "mysql" %}
    "aiomysql>=0.2.0",
{% endif %}
    "sqlalchemy>=2.0.25",
{% endif %}
{% if has_auth %}
{% if auth_mode == "jwt" %}
    "python-jose[cryptography]>=3.3.0",
    "passlib[bcrypt]>=1.7.4",
{% elif auth_mode == "session" %}
    "itsdangerous>=2.1.2",
{% endif %}
{% endif %}
    "httpx>=0.26.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=7.4.0",
    "pytest-asyncio>=0.23.0",
    "pytest-cov>=4.1.0",
    "ruff>=0.1.9",
    "mypy>=1.8.0",
    "httpx>=0.26.0",
]

[build-system]
requires = ["setuptools>=68.0", "wheel"]
build-backend = "setuptools.build_meta"

[tool.setuptools.packages.find]
where = ["."]
include = ["app*"]

[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]
addopts = "-v --tb=short"

[tool.ruff]
target-version = "py311"
line-length = 100
select = ["E", "F", "W", "I", "N", "UP", "B", "C4"]
ignore = ["E501"]

[tool.mypy]
python_version = "3.11"
strict = true
ignore_missing_imports = true
